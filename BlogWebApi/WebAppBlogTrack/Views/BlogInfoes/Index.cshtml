@model IEnumerable<BlogWebApi.Models.BlogInfo>

    @{
        ViewData["Title"] = "Index";
    }

    <h1>Index</h1>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <span>
        <div class="text-right mb-3">
            <form asp-controller="EmpInfoes" asp-action="Login" method="post">
                <button type="submit" class="btn-danger">Logout</button>
            </form>
        </div>
    </span>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-body">
                    <h2 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h2>
                    <p class="card-text">By @Html.DisplayFor(modelItem => item.EmpEmailId)</p>
                    <p class="card-text">Date: @Html.DisplayFor(modelItem => item.DateOfCreation)</p>
                    <p class="card-text">Subject: @Html.DisplayFor(modelItem => item.Subject)</p>
                    <p class="url">
                        <a href="@item.BlogUrl" class="btn btn-primary">
                            @item.BlogUrl
                        </a>
                    </p>
                        <a asp-action="Edit" class="btn btn-danger" asp-route-id="@item.BlogInfoId">Edit</a>
                        <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.BlogInfoId">Details</a>
                        <a asp-action="Delete" class="btn btn-success" asp-route-id="@item.BlogInfoId">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
